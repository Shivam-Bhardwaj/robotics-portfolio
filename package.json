{
  "name": "robotics-portfolio",
  "version": "1.0.0",
  "description": "Interactive portfolio showcasing robotics engineering expertise, project management experience, and technical skills in autonomous systems and hardware development",
  "author": {
    "name": "Shivam Bhardwaj",
    "email": "contact@shivambhardwaj.com",
    "url": "https://shivambhardwaj.com"
  },
  "homepage": "https://shivambhardwaj.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shivam-Bhardwaj/robotics-portfolio.git"
  },
  "keywords": [
    "robotics",
    "portfolio",
    "nextjs",
    "typescript",
    "framer-motion",
    "tailwindcss",
    "project-management",
    "autonomous-systems",
    "hardware-development",
    "interactive",
    "swarm-robotics"
  ],
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true npm run build",
    "export": "next build && next export",
    "clean": "rm -rf .next out",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --watch --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "jest --testPathPattern=accessibility",
    "test:security": "npm audit && jest --testPathPattern=security",
    "test:performance": "playwright test --grep @performance",
    "test:all": "npm run test && npm run test:e2e && npm run test:a11y",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:security",
    "security:audit": "npm audit --audit-level high",
    "security:scan": "node scripts/security-scan.js"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "next": "15.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "axe-core": "^4.8.2",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "playwright": "^1.40.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
